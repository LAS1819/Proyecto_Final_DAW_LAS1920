<!-- see.hbs -->
<div class="row m-auto">
	<div class="col">
		<h1 class="titulo titulo-seccion">{{incidencia.nomIncidencia}}</h1>
		<hr>
	</div>
</div>
<div class="row m-auto">
	<div class="col">
		<div class="card tarjeta-ver">
			<img class="card-img-top" src="/uploads/{{incidencia.imgIncidencia}}" alt="Imagen de la incidencia">
			<div class="card-body">
				<h5 class="card-title">
					{{incidencia.nomIncidencia}}
				</h5>
				<p class="card-text">{{incidencia.menIncidencia}}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item bg-dark">Publicado por:</li>
				<li class="list-group-item bg-dark">Ubicación: {{incidencia.locIncidencia}}</li>
				<li class="list-group-item bg-dark">Localidad: {{incidencia.ubiIncidencia}}</li>
				<li class="list-group-item bg-dark">Tipo de incidencia: {{incidencia.tipIncidencia}}</li>
				<li class="list-group-item bg-dark">Votos: {{incidencia.totVotos}}</li>
			</ul>
			<div class="card-footer text-center mt-3">
				<a href="#" class="btn btn-cmc">Añadir propuesta</a>
				<a href="#" class="btn btn-secondary">Votar</a>
			</div>
		</div>
	</div>
</div>