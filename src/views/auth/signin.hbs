{{!-- signin.hbs --}}
<div class="container p-4">
	<div class="row">
		<div class="col-md mx-auto">
			<div class="card text-center tarjeta">
				<div class="card-header">
					<h3>Entrar</h3>
				</div>
				<div class="card-body">
					<img src="/img/CMC_logotipo_header_200.png" alt="Logo Cuidandomiciudad" class="card-img-top mx-auto m-2 w-50">
					<form action="/signin" method="POST">
						<div class="form-group">
							<input type="text" name="nickUsuario" placeholder="Nombre de usuario" class="form-control">
						</div>
						<div class="form-group">
							<input type="password" name="pasUsuario" placeholder="Password" class="form-control">
						</div>

						<div class="form-group">
							<button class="btn btn-success btn-block">
								Entrar
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>